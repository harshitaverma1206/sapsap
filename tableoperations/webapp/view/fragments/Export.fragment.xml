<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
	<Dialog
		id="exportDialog"
		title="Select for Export">
        <content>
					<VBox >
						<form:SimpleForm >
							<form:content>
							<HBox>
								<Label text="CSV Format" class="sapUiLargeMarginEnd"></Label>
								<Button icon="sap-icon://download" press="onCSV" class="sapUiLargeMarginBeginEnd"/>
                            </HBox>    
							<Label/>
                            <HBox>    
                                <Label text="Excel Format" class="sapUiLargeMarginEnd"></Label>
								<Button icon="sap-icon://download" press="onExcel" class="sapUiLargeMarginBeginEnd"/>
							</HBox>
                            </form:content>
						</form:SimpleForm>
					</VBox>
		</content>
        <endButton>
            <Button text="Close" press="onClose" type="Emphasized"/>
        </endButton>
	</Dialog>
</core:FragmentDefinition>

